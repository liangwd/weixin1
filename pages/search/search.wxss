/* pages/search/search.wxss */
page {
    background-color: #ccc;
}

.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
}
.front{
  position: absolute;
}
.search_container{
  width: 100%; 
  height: 70rpx;
  padding: 0rpx;
  margin: 0rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  border: 0rpx solid #d0d0d0;  
}

.searchcion{
    position: absolute;  
    top:55rpx; 
    left: 55rpx; 
    width: 30rpx;  
    height: 30rpx;  
    text-align: center; 
}

input{
    width: 500rpx;
    margin-left: 50rpx;
    margin-right: 20rpx;
    padding-left: 50rpx;
    height: 60rpx;
    border-radius:  10rpx;  
    background-color: #fff;
    font-weight: bold;
}

.ok{
      margin-right: 40rpx; 
      font-weight: bold;
      height: 60rpx;
      width: 100rpx; 
      text-align: center;
      background-color: white;  
      border: 1px solid #d0d0d0;  
      border-radius: 10rpx;  
}



#listcontainer{
  width: 100%;
  margin-top:50rpx;
}

#listitem{
  margin-top:15rpx;
  border:1rpx solid #fff; 
  margin-left: 25rpx;
  margin-right: 25rpx;
  height:160rpx;
  width: 700rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  background-color: #ccc;
}

#itemimg{
  margin-left: 10rpx;
  margin-right: 20rpx;
  width: 200rpx;
  height: 150rpx;
  border-radius: 20rpx;
}
#iteminfo{
  color: green;
  font-weight: bold;
  font-size: 30rpx;
}

#pageskip{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center; 
  text-align: center;
  padding: 10rpx;
  justify-content: center;
}

#prev{
  margin-left: 20rpx;
  margin-right:20rpx;
}

#next{ 
 margin-left: 20rpx;
}